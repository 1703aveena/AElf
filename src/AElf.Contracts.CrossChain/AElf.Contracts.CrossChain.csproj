<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <PackageId>AElf.Contracts.CrossChain</PackageId>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\AElf.CrossChain.Types\AElf.CrossChain.Types.csproj" />
      <ProjectReference Include="..\AElf.Sdk.CSharp\AElf.Sdk.CSharp.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Content Include="..\..\protobuf\aelf_options.proto">
        <Link>Protobuf/Proto/aelf_options.proto</Link>
      </Content>
      <Content Include="..\..\protobuf\common.proto">
        <Link>Protobuf/Proto/common.proto</Link>
      </Content>
      <Content Include="..\..\protobuf\crosschain.proto">
          <Link>Protobuf/Proto/crosschain.proto</Link>
      </Content>
      <Content Include="..\..\protobuf\token_contract.proto">
          <Link>Protobuf/Proto/token_contract.proto</Link>
      </Content>
      <Content Include="..\..\protobuf\acs3.proto">
          <Link>Protobuf/Proto/acs3.proto</Link>
      </Content>
      <Content Include="..\..\protobuf\cross_chain_contract.proto">
        <Link>Protobuf/Proto/cross_chain_contract.proto</Link>
      </Content>
      <Content Include="..\..\protobuf\kernel.proto">
        <Link>Protobuf/Proto/kernel.proto</Link>
      </Content>
      <Content Include="..\..\protobuf\parliament_auth_contract.proto">
          <Link>Protobuf/Proto/parliament_auth_contract.proto</Link>
      </Content>
    </ItemGroup>
    <Target Name="Gen_proto" BeforeTargets="BeforeBuild">
        <Exec Condition="!$([MSBuild]::IsOsPlatform(Windows))" Command="../../scripts/generate_contract_reference.sh acs3.proto basic_contract_zero.proto token_contract.proto dpos_sidechain_contract.proto consensus_dpos.proto parliament_auth_contract.proto; ../../scripts/generate_contract_code.sh cross_chain_contract.proto" />
        <Exec Condition="$([MSBuild]::IsOsPlatform(Windows))" Command="..\..\scripts\generate_contract_reference.bat acs3.proto basic_contract_zero.proto token_contract.proto dpos_sidechain_contract.proto consensus_dpos.proto parliament_auth_contract.proto &amp; ..\..\scripts\generate_contract_code.bat cross_chain_contract.proto" />
    </Target>
    <Target Name="UpdateGeneratedFiles" DependsOnTargets="Gen_proto" BeforeTargets="BeforeBuild">
        <ItemGroup>
            <Compile Include="./Protobuf/Generated/*.cs" />
        </ItemGroup>
    </Target>
</Project>
