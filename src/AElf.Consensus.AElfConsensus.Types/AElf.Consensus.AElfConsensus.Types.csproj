<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <RootNamespace>AElf.Consensus.AElfConsensus</RootNamespace>
        <PackageId>AElf.Consensus.AElfConsensus.Types</PackageId>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\AElf.Cryptography\AElf.Cryptography.csproj" />
        <ProjectReference Include="..\AElf.Kernel.Types\AElf.Kernel.Types.csproj" />
        <ProjectReference Include="..\AElf.Types\AElf.Types.csproj" />
    </ItemGroup>

    <Target Name="Gen_proto" BeforeTargets="BeforeBuild">
        <Exec Command="protoc --proto_path=../../protobuf --csharp_out=./Protobuf/Generated --csharp_opt=file_extension=.g.cs aelf_consensus.proto" />
    </Target>
    <Target Name="UpdateGeneratedFiles" DependsOnTargets="Gen_proto" BeforeTargets="BeforeBuild">
        <ItemGroup>
            <Compile Include="./Protobuf/Generated/*.g.cs" />
        </ItemGroup>
    </Target>

    <ItemGroup>
        <None Include="..\..\protobuf\aelf_consensus.proto">
            <Link>Protobuf/Proto/aelf_consensus.proto</Link>
        </None>
    </ItemGroup>

</Project>
