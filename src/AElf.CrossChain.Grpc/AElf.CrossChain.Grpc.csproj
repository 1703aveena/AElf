<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <PackageId>AElf.CrossChain.Grpc</PackageId>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <NoWarn>1701;1702;0436</NoWarn>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\AElf.Core\AElf.Core.csproj" />
        <ProjectReference Include="..\AElf.CrossChain.Core\AElf.CrossChain.Core.csproj" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\..\protobuf\cross_chain_contract.proto">
          <Link>Protobuf/Proto/cross_chain_contract.proto</Link>
        </None>
        <None Include="..\..\protobuf\header_info.proto">
            <Link>./Grpc/Protobuf/header_info.proto</Link>
        </None>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Grpc" Version="1.19.0" />
        <PackageReference Include="Grpc.Tools" Version="1.19.0" />
    </ItemGroup>
    <Target Name="Gen_rpc" BeforeTargets="BeforeBuild">
        <ItemGroup>
            <Protobuf ProtoRoot="../../protobuf" Include="header_info.proto" OutputDir="./Grpc/Protobuf/Generated" />
        </ItemGroup>
    </Target>
    <Target Name="Gen_proto" BeforeTargets="BeforeBuild">
        <Exec Condition="!$([MSBuild]::IsOsPlatform(Windows))" Command="../../scripts/generate_event_only.sh cross_chain_contract.proto" />
        <Exec Condition="$([MSBuild]::IsOsPlatform(Windows))" Command="..\..\scripts\generate_event_only.bat cross_chain_contract.proto" />
    </Target>
    <Target Name="UpdateGeneratedFiles" DependsOnTargets="Gen_proto" BeforeTargets="BeforeBuild">
        <ItemGroup>
            <Compile Include="./Protobuf/Generated/*.cs" />
        </ItemGroup>
    </Target>
</Project>
