<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <PackageId>AElf.Contracts.Consensus.PoW</PackageId>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <RootNamespace>AElf.Contracts.Consensus.PoW</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\AElf.Sdk.CSharp\AElf.Sdk.CSharp.csproj" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\..\protobuf\common.proto">
            <Link>Protobuf/Proto/common.proto</Link>
        </None>
        <None Include="..\..\protobuf\kernel.proto">
            <Link>Protobuf/Proto/kernel.proto</Link>
        </None>
        <None Include="..\..\protobuf\acs4.proto">
            <Link>Protobuf/Proto/acs4.proto</Link>
        </None>
        <None Include="..\..\protobuf\aelf_options.proto">
            <Link>Protobuf/Proto/aelf_options.proto</Link>
        </None>
        <None Include="..\..\protobuf\pow_contract.proto">
            <Link>Protobuf/Proto/aedpos_contract.proto</Link>
        </None>
        <None Include="..\..\protobuf\pow_contract_impl.proto">
            <Link>Protobuf/Proto/aedpos_contract_impl.proto</Link>
        </None>
    </ItemGroup>
    <Target Name="Gen_proto" BeforeTargets="BeforeBuild">
        <Exec Condition="!$([MSBuild]::IsOsPlatform(Windows))" Command="../../scripts/generate_contract_base.sh acs4.proto pow_contract.proto; ../../scripts/generate_contract_code.sh pow_contract_impl.proto" />
        <Exec Condition="$([MSBuild]::IsOsPlatform(Windows))" Command="..\..\scripts\generate_contract_base.bat acs4.proto pow_contract.proto &amp; ..\..\scripts\generate_contract_code.bat pow_contract_impl.proto" />
    </Target>
    <Target Name="UpdateGeneratedFiles" DependsOnTargets="Gen_proto" BeforeTargets="BeforeBuild">
        <ItemGroup>
            <Compile Include="./Protobuf/Generated/*.cs" />
        </ItemGroup>
    </Target>
</Project>
