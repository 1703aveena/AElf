<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <LangVersion>latest</LangVersion>
        <PackageId>AElf.Kernel.Consensus.DPoS</PackageId>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>

    <PropertyGroup>
      <NoWarn>0436</NoWarn>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\AElf.Kernel.Consensus.Scheduler.RxNet\AElf.Kernel.Consensus.Scheduler.RxNet.csproj" />
      <ProjectReference Include="..\AElf.Kernel.Consensus\AElf.Kernel.Consensus.csproj" />
      <ProjectReference Include="..\AElf.Kernel.Types\AElf.Kernel.Types.csproj" />
      <ProjectReference Include="..\AElf.Kernel.Consensus.Scheduler\AElf.Kernel.Consensus.Scheduler.csproj" />
      <ProjectReference Include="..\AElf.Sdk.CSharp\AElf.Sdk.CSharp.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Infrastructure" />
    </ItemGroup>

    <ItemGroup>
      <Content Include="..\..\protobuf\aelf_options.proto">
        <Link>Protobuf/Proto/aelf_options.proto</Link>
      </Content>
      <Content Include="..\..\protobuf\common.proto">
        <Link>Protobuf/Proto/common.proto</Link>
      </Content>
        <Content Include="..\..\protobuf\consensus_dpos.proto">
            <Link>Protobuf/Proto/consensus_dpos.proto</Link>
        </Content>
      <Content Include="..\..\protobuf\dpos_contract.proto">
        <Link>Protobuf/Proto/dpos_contract.proto</Link>
      </Content>
    </ItemGroup>
    <Target Name="Gen_proto" BeforeTargets="BeforeBuild">
        <Exec Condition="!$([MSBuild]::IsOsPlatform(Windows))" Command="protoc --proto_path=../../protobuf --csharp_out=./Protobuf/Generated --csharp_opt=file_extension=.g.cs consensus_dpos.proto consensus.proto; ../../scripts/generate_event_only.sh dpos_contract.proto" />
        <Exec Condition="$([MSBuild]::IsOsPlatform(Windows))" Command="protoc --proto_path=../../protobuf --csharp_out=./Protobuf/Generated --csharp_opt=file_extension=.g.cs consensus_dpos.proto consensus.proto &amp; ..\..\scripts\generate_event_only.bat consensus.proto consensus_dpos.proto consensus_dpos.proto dpos_contract.proto" />
    </Target>
    <Target Name="UpdateGeneratedFiles" DependsOnTargets="Gen_proto" BeforeTargets="BeforeBuild">
        <ItemGroup>
            <Compile Include="./Protobuf/Generated/*.cs" />
        </ItemGroup>
    </Target>
</Project>
