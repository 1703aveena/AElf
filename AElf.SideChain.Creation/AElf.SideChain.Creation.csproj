<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="EventAggregator" Version="1.0.0" />
    <PackageReference Include="Google.Protobuf" Version="3.6.0" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
    <PackageReference Include="NLog" Version="4.5.6" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\AElf.ChainController\AElf.ChainController.csproj" />
  </ItemGroup>
  <Target Name="Gen_proto" BeforeTargets="BeforeBuild">
    <Exec Command="cd ..; protoc --proto_path=./AElf.Contracts.Genesis/Protobuf --csharp_out=./$(ProjectName)/Protobuf/Generated --csharp_opt=file_extension=.g.cs side-chain-info.proto" />
  </Target>
  <ItemGroup>
    <Compile Include="./Protobuf/Generated/*.g.cs" />
  </ItemGroup>
</Project>