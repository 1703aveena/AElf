<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\AElf.Kernel.Types\AElf.Kernel.Types.csproj" />
        <ProjectReference Include="..\AElf.Types\AElf.Types.csproj" />
        <ProjectReference Include="..\AElf.Sdk.CSharp\AElf.Sdk.CSharp.csproj" />
    </ItemGroup>
    <ItemGroup>
        <Content Include="..\protobuf\aelf_options.proto">
            <Link>Protobuf/Proto/aelf_options.proto</Link>
        </Content>
        <Content Include="..\protobuf\common.proto">
            <Link>Protobuf/Proto/common.proto</Link>
        </Content>
        <Content Include="..\protobuf\parliament_auth_contract.proto">
            <Link>Protobuf/Proto/parliament_auth_contract.proto</Link>
        </Content>
        <Content Include="..\protobuf\auth.proto">
            <Link>Protobuf/Proto/auth.proto</Link>
        </Content>
        <Content Include="..\protobuf\dpos_contract.proto">
            <Link>Protobuf/Proto/dpos_contract.proto</Link>
        </Content>
    </ItemGroup>
    <ItemGroup>
      <Folder Include="Protobuf\Generated" />
      <Folder Include="Protobuf\Proto" />
    </ItemGroup>
    <Target Name="Gen_proto" BeforeTargets="BeforeBuild">
        <Exec Condition="!$([MSBuild]::IsOsPlatform(Windows))" Command="../scripts/generate_contract_reference.sh consensus_dpos.proto dpos_contract.proto; ../scripts/generate_contract_code.sh parliament_auth_contract.proto" />
        <Exec Condition="$([MSBuild]::IsOsPlatform(Windows))" Command="..\scripts\generate_contract_reference.bat consensus_dpos.proto dpos_contract.proto &amp; ..\scripts\generate_contract_code.bat parliament_auth_contract.proto" />
    </Target>
    <Target Name="UpdateGeneratedFiles" DependsOnTargets="Gen_proto" BeforeTargets="BeforeBuild">
        <ItemGroup>
            <Compile Include="./Protobuf/Generated/*.cs" />
        </ItemGroup>
    </Target>
</Project>
