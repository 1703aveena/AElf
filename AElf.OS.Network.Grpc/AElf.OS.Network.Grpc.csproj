<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp2.2</TargetFramework>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Google.Protobuf" Version="3.6.1" />
      <PackageReference Include="Grpc" Version="1.18.0" />
      <PackageReference Include="Grpc.Tools" Version="1.18.0" />
      <PackageReference Include="Volo.Abp.Core" Version="0.11.0" />
      <PackageReference Include="Volo.Abp.EventBus" Version="0.11.0" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\AElf.Common\AElf.Common.csproj" />
      <ProjectReference Include="..\AElf.Cryptography\AElf.Cryptography.csproj" />
      <ProjectReference Include="..\AElf.Kernel.Types\AElf.Kernel.Types.csproj" />
      <ProjectReference Include="..\AElf.OS\AElf.OS.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Generated" />
    </ItemGroup>

    <ItemGroup>
      <Reference Include="Volo.Abp.EventBus, Version=0.11.0.0, Culture=neutral, PublicKeyToken=null">
        <HintPath>..\..\..\..\.nuget\packages\volo.abp.eventbus\0.11.0\lib\netstandard2.0\Volo.Abp.EventBus.dll</HintPath>
      </Reference>
    </ItemGroup>

    <Target Name="Gen_proto" BeforeTargets="BeforeBuild">
        <Exec Condition=" '$(OS)' != 'Windows_NT' " Command="sh grpc.sh" LogStandardErrorAsError="true" />
        <Exec Condition=" '$(OS)' == 'Windows_NT' " Command="protoc --proto_path=./Proto --csharp_out=./Generated --csharp_opt=file_extension=.g.cs --grpc_out=./Generated ./Proto/PeerService.proto --plugin=protoc-gen-grpc=%userprofile%/.nuget/packages/grpc.tools/1.18.0/tools/windows_x86/grpc_csharp_plugin.exe" />
    </Target>
    
    <Target Name="UpdateGeneratedFiles" DependsOnTargets="Gen_proto" BeforeTargets="BeforeBuild">
        <ItemGroup>
            <Compile Include="./Generated/*.g.cs" />
            <Compile Include="./Generated/*Grpc.cs" />
        </ItemGroup>
    </Target>

</Project>
