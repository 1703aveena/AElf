<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp2.2</TargetFramework>

        <IsPackable>false</IsPackable>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.NET.Test.Sdk" Version="15.9.0" />
        <PackageReference Include="Shouldly" Version="3.0.2" />
        <PackageReference Include="xunit" Version="2.4.0" />
        <PackageReference Include="xunit.runner.visualstudio" Version="2.4.0" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\..\src\AElf.Contracts.AssociationAuth\AElf.Contracts.AssociationAuth.csproj" />
      <ProjectReference Include="..\..\src\AElf.Contracts.TestKit\AElf.Contracts.TestKit.csproj" />
    </ItemGroup>
    <ItemGroup>
        <Content Include="..\..\protobuf\acs3.proto">
          <Link>Protobuf/Proto/acs3.proto</Link>
        </Content>
        <Content Include="..\..\protobuf\association_auth_contract.proto">
          <Link>Protobuf/Proto/association_auth_contract.proto</Link>
        </Content>
        <Content Include="..\..\protobuf\common.proto">
            <Link>Protobuf/Proto/common.proto</Link>
        </Content>
        <Content Include="..\..\protobuf\aelf_options.proto">
            <Link>Protobuf/Proto/aelf_options.proto</Link>
        </Content>
        <Content Include="..\..\protobuf\basic_contract_zero.proto">
            <Link>Protobuf/Proto/basic_contract_zero.proto</Link>
        </Content>
    </ItemGroup>
    <ItemGroup>
        <Folder Include="Protobuf\Generated" />
    </ItemGroup>
    <Target Name="Gen_proto" BeforeTargets="BeforeBuild">
        <Exec Condition="!$([MSBuild]::IsOsPlatform(Windows))" Command="../../scripts/generate_contract_stub.sh  basic_contract_zero.proto association_auth_contract.proto" />
        <Exec Condition="$([MSBuild]::IsOsPlatform(Windows))" Command="..\..\scripts\generate_contract_stub.bat  basic_contract_zero.proto association_auth_contract.proto" />
    </Target>
    <Target Name="UpdateGeneratedFiles" DependsOnTargets="Gen_proto" BeforeTargets="BeforeBuild">
        <ItemGroup>
            <Compile Include="./Protobuf/Generated/*.cs" />
        </ItemGroup>
    </Target>

    <ItemGroup>
      <Reference Include="Volo.Abp.Core, Version=0.15.0.0, Culture=neutral, PublicKeyToken=null">
        <HintPath>..\..\..\..\.nuget\packages\volo.abp.core\0.15.0\lib\netstandard2.0\Volo.Abp.Core.dll</HintPath>
      </Reference>
    </ItemGroup>
</Project>
