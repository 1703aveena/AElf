<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp2.2</TargetFramework>
        <IsPackable>false</IsPackable>
        <RootNamespace>AElf.Contract.Consensus.AElfConsensus</RootNamespace>
    </PropertyGroup>
    <PropertyGroup>
        <NoWarn>0436</NoWarn>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="coverlet.msbuild" Version="2.5.1" />
        <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.0.1" />
        <PackageReference Include="Shouldly" Version="3.0.2" />
        <PackageReference Include="xunit" Version="2.4.1" />
        <PackageReference Include="xunit.runner.console" Version="2.4.1" />
        <PackageReference Include="xunit.runner.visualstudio" Version="2.4.1" />
    </ItemGroup>
    <ItemGroup>
        <ProjectReference Include="..\..\src\AElf.Contracts.TestKit\AElf.Contracts.TestKit.csproj" />
        <ProjectReference Include="..\..\src\AElf.Contracts.Consensus.AElfConsensus\AElf.Contracts.Consensus.AElfConsensus.csproj" />
        <ProjectReference Include="..\..\src\AElf.Contracts.Election\AElf.Contracts.Election.csproj" />
        <ProjectReference Include="..\..\src\AElf.Consensus.AElfConsensus.Types\AElf.Consensus.AElfConsensus.Types.csproj" />
    </ItemGroup>
    <ItemGroup>
        <Content Include="..\..\protobuf\common.proto">
            <Link>Protobuf/Proto/common.proto</Link>
        </Content>
        <Content Include="..\..\protobuf\aelf_options.proto">
            <Link>Protobuf/Proto/aelf_options.proto</Link>
        </Content>
        <None Include="..\..\protobuf\consensus.proto">
            <Link>Protobuf/Proto/consensus.proto</Link>
        </None>
        <Content Include="..\..\protobuf\aelf_consensus.proto">
            <Link>Protobuf/Proto/aelf_consensus.proto</Link>
        </Content>
        <Content Include="..\..\protobuf\aelf_consensus_contract.proto">
            <Link>Protobuf/Proto/aelf_consensus_contract.proto</Link>
        </Content>
        <Content Include="..\..\protobuf\election_contract.proto">
            <Link>Protobuf/Proto/election_contract.proto</Link>
        </Content>
        <Content Include="..\..\protobuf\basic_contract_zero.proto">
            <Link>Protobuf/Proto/basic_contract_zero.proto</Link>
        </Content>
    </ItemGroup>
    <Target Name="Gen_proto" BeforeTargets="BeforeBuild">
        <Exec Condition="!$([MSBuild]::IsOsPlatform(Windows))" Command="../../scripts/generate_contract_stub.sh basic_contract_zero.proto election_contract.proto aelf_consensus_contract.proto" />
        <Exec Condition="$([MSBuild]::IsOsPlatform(Windows))" Command="..\..\scripts\generate_contract_stub.bat basic_contract_zero.proto election_contract.proto aelf_consensus_contract.proto" />
    </Target>
    <Target Name="UpdateGeneratedFiles" DependsOnTargets="Gen_proto" BeforeTargets="BeforeBuild">
        <ItemGroup>
            <Compile Include="./Protobuf/Generated/*.cs" />
        </ItemGroup>
    </Target>
</Project>
