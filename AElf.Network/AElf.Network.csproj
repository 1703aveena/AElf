<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.6.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.1" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\AElf.Common\AElf.Common.csproj" />
    <ProjectReference Include="..\AElf.Configuration\AElf.Configuration.csproj" />
    <ProjectReference Include="..\AElf.Kernel.ChainController\AElf.Kernel.ChainController.csproj" />
    <ProjectReference Include="..\AElf.Kernel.Core\AElf.Kernel.Core.csproj" />
    <ProjectReference Include="..\AElf.Kernel.Types\AElf.Kernel.Types.csproj">
      <Project>{DAEEB200-1D20-4A56-8C21-CA2ADE976AD5}</Project>
      <Name>AElf.Kernel.Types</Name>
    </ProjectReference>
  </ItemGroup>
  <ItemGroup>
    <Content Include="..\protobuf\messages.proto">
      <Link>Data/Protobuf/Proto/messages.proto</Link>
    </Content>
  </ItemGroup>
  <Target BeforeTargets="BeforeBuild" Name="Gen_proto">
    <Exec Command="protoc --proto_path=../protobuf --csharp_out=./Data/Protobuf/Generated --csharp_opt=file_extension=.g.cs messages.proto" />
  </Target>
  <Target Name="UpdateGeneratedFiles" DependsOnTargets="Gen_proto" BeforeTargets="BeforeBuild">
    <ItemGroup>
      <Compile Include="./Data/Protobuf/Generated/*.g.cs" />
    </ItemGroup>
  </Target>
</Project>